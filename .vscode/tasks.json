{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Sonar: Maven scan (SpringApi)",
      "type": "shell",
      "command": "${workspaceFolder}/SpringApi/mvnw",
      "args": [
        "-Dsonar.host.url=${env:SONAR_HOST_URL}",
        "-Dsonar.login=${env:SONAR_TOKEN}",
        "-DskipTests",
        "sonar:sonar"
      ],
      "options": {
        "cwd": "${workspaceFolder}/SpringApi"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Sonar: Maven scan (use mvn)",
      "type": "shell",
      "command": "mvn",
      "args": [
        "-Dsonar.host.url=${env:SONAR_HOST_URL}",
        "-Dsonar.login=${env:SONAR_TOKEN}",
        "-DskipTests",
        "sonar:sonar"
      ],
      "options": {
        "cwd": "${workspaceFolder}/SpringApi"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
